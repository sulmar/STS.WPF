<Window x:Class="STS.Ikar.WPFClient.Views.DriversView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STS.Ikar.WPFClient.Views"
        
        mc:Ignorable="d"
        Title="DriversView" Height="300" Width="300">


    <Window.Resources>
  
        
    </Window.Resources>
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <DockPanel>
                <Button Style="{StaticResource ButtonStyle}">Add</Button>
                <Button Style="{StaticResource ButtonStyle}">Update</Button>
                <Border/>

                <Button Style="{StaticResource ButtonStyle}">Delete</Button>
            </DockPanel>


            <ListBox Grid.Row="1">
                <ListBoxItem>Driver 1</ListBoxItem>
                <ListBoxItem>Driver 2</ListBoxItem>
                <ListBoxItem>Driver 3</ListBoxItem>
            </ListBox>

        </Grid>
        
    </Grid>
