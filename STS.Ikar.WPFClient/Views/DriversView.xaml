<Window x:Class="STS.Ikar.WPFClient.Views.DriversView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STS.Ikar.WPFClient.Views"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="DriversView" Height="300" Width="300">


    <Window.Resources>
        <sys:Double x:Key="ButtonWidth">100</sys:Double>
        <sys:Double x:Key="ButtonHeight">50</sys:Double>
        <SolidColorBrush x:Key="ButtonBackgroundColor">Green</SolidColorBrush>
    </Window.Resources>
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <DockPanel>
                <Button 
                    Height="{StaticResource ButtonHeight }" 
                    Width="{StaticResource ButtonWidth}"
                    Background="{StaticResource ButtonBackgroundColor}"
                    >Add</Button>
                <Button Height="{StaticResource ButtonHeight}" 
                        Width="{StaticResource ButtonWidth}"
                        Background="{StaticResource ButtonBackgroundColor}"
                        >
                    Update</Button>
                <Border/>
            </DockPanel>


            <ListBox Grid.Row="1">
                <ListBoxItem>Driver 1</ListBoxItem>
                <ListBoxItem>Driver 2</ListBoxItem>
                <ListBoxItem>Driver 3</ListBoxItem>
            </ListBox>

        </Grid>
        
    </Grid>
</Window>
